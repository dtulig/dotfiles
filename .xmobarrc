Config { font = "xft:inconsolata:size=10:antialias=true"
     , bgColor = "#002b36"
     , fgColor = "#93a1a1"
     , alpha = 125
     , position = Top
     , commands = [
               Run Cpu [ "-L","3","-H","50","--normal","green","--high","red"] 10
             , Run DynNetwork ["-L","0","-H","70","--normal","green","--high","red"] 10
             , Run Memory ["-t","Mem: <usedratio>%"] 10
             , Run CoreTemp ["-t", "Temp: <core0>|<core1>|<core2>|<core3>C",
                             "-L", "40", "-H", "60",
                             "-h", "red"] 50
             , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
             , Run StdinReader
             ]
     , sepChar = "%"
     , alignSep = "}{"
     , template = " %StdinReader%}{ %cpu% | %memory% | %dynnetwork% | %coretemp% | <fc=#cb4b16>%date%</fc> "
     }
